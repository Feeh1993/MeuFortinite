<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="3dp"
    android:orientation="horizontal"
    android:padding="3dp">

  <ImageView
      android:id="@+id/imgAVT"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_margin="3dp"
      app:srcCompat="@drawable/ic_emojis" />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_weight="0.6"
      android:background="@drawable/bordas_selecionada">

    <TextView
        android:id="@+id/textView_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:autoLink="all"
        android:maxLines="3"
        android:text="Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem  "
        android:textAlignment="center"
        android:textColor="@color/branco"
        android:textSize="12sp"
        android:textStyle="italic"
        android:typeface="sans" />
  </FrameLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VIEW.FRAGMENT.Buscar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.tomer.fadingtextview.FadingTextView
            android:id="@+id/fdngtxtResumo_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:visibility="visible"
            android:fontFamily="@font/font_family_fortinite"
            app:texts="@array/textResumo"
            app:timeout="2000" />

        <LinearLayout
            android:id="@+id/lnlTopo_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <com.tomer.fadingtextview.FadingTextView
                android:id="@+id/fdngtxtTopo_buscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:fontFamily="@font/font_family_fortinite"
                android:visibility="visible"
                app:texts="@array/textInfo"
                app:timeout="2000" />

            <LinearLayout
                android:id="@+id/lnlDefinicoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="2dp"
                android:background="@drawable/bordas_fundo"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/swtchSeuHeadSet_buscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/font_family_fortinite"
                    android:showText="false"
                    android:text=" O usuário precisa ter headSet?"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:thumbTextPadding="2dp" />

                <Switch
                    android:id="@+id/swtchMeuHeadSet_buscar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/font_family_fortinite"
                    android:showText="false"
                    android:text=" Voce possui HeadSet?"
                    android:textColor="@color/colorPrimary"
                    android:thumbTextPadding="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Switch
                        android:id="@+id/swtchDuo_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/font_family_fortinite"
                        android:showText="false"
                        android:text=" Duplas?"
                        android:textColor="@color/colorPrimary"
                        android:textOff="Não"
                        android:textOn="Sim"
                        android:thumbTextPadding="2dp" />

                    <Switch
                        android:id="@+id/swtchSquad_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/font_family_fortinite"
                        android:showText="false"
                        android:text=" Esquadrões?"
                        android:textColor="@color/colorPrimary"
                        android:textOff="Não"
                        android:textOn="Sim"
                        android:thumbTextPadding="2dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlMeio_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/imgbSearch_BUSCAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@null"
                android:src="@drawable/ic_world" />

            <com.tomer.fadingtextview.FadingTextView
                android:id="@+id/fdngtxtBuscando_buscar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:fontFamily="@font/font_family_fortinite"
                android:visibility="gone"
                app:texts="@array/text"
                app:timeout="1000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnlFundo_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/bordas_fundo"
            android:orientation="vertical"
            android:padding="3dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lnlUser1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUserUm_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_img01avt" />

                <TextView
                    android:id="@+id/txtUserUm_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:text="..."
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:fontFamily="@font/font_family_fortinite" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnlUser2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUserDois_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_img01avt" />

                <TextView
                    android:id="@+id/txtUserDois_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:text="..."
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:fontFamily="@font/font_family_fortinite"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnlUser3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgUserTres_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_img01avt" />

                <TextView
                    android:id="@+id/txtUserTres_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:text="..."
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:fontFamily="@font/font_family_fortinite"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
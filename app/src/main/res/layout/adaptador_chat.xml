<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <ImageView
        android:id="@+id/imgAVT"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        app:srcCompat="@drawable/ic_emojis" />

    <TextView
        android:id="@+id/nickname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:fontFamily="@font/font_family_fortinite"
        android:text="nick"
        android:textColor="@color/colorPrimary"
        android:textSize="11sp" />
  </LinearLayout>

  <TextView
      android:id="@+id/textView_message"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="3dp"
      android:autoLink="all"
      android:fontFamily="@font/font_family_fortinite"
      android:maxLines="3"
      android:text="Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem Long mensagem  "
      android:textAlignment="center"
      android:textColor="@color/colorPrimary"
      android:textSize="16sp" />
</LinearLayout>
